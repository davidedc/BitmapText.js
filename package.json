{
  "name": "bitmaptext-js",
  "version": "1.0.0",
  "description": "A JavaScript library for rendering pixel-identical, consistent bitmap text on HTML5 Canvas across all browsers and devices.",
  "main": "src/core/BitmapText.js",
  "exports": {
    ".": "./src/core/BitmapText.js",
    "./core/*": "./src/core/*",
    "./editor/*": "./src/editor/*",
    "./utils/*": "./src/utils/*",
    "./runtime": {
      "import": "./src/core/BitmapText.js",
      "require": "./src/core/BitmapText.js"
    },
    "./core/BitmapText": "./src/core/BitmapText.js",
    "./core/BitmapGlyphStore": "./src/core/BitmapGlyphStore.js",
    "./core/FontProperties": "./src/core/FontProperties.js",
    "./editor/BitmapTextEditor": "./src/editor/BitmapTextEditor.js",
    "./editor/BitmapGlyphStoreEditor": "./src/editor/BitmapGlyphStoreEditor.js",
    "./editor/FontPropertiesEditor": "./src/editor/FontPropertiesEditor.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test",
    "doc": "docs"
  },
  "scripts": {
    "serve": "python -m http.server 8000",
    "font-builder": "open http://localhost:8000/public/font-builder.html",
    "test-renderer": "open http://localhost:8000/public/test-renderer.html",
    "watch-fonts": "./scripts/watch-glyph-sheets.sh",
    "optimize-images": "./scripts/optimize-images.sh",
    "qoi-to-png": "node scripts/qoi-to-png-converter.js",
    "png-to-js": "node scripts/png-to-js-converter.js",
    "qoi-memory": "node scripts/qoi-memory-calculator.js",
    "build-multi-size-demo": "./scripts/build-node-multi-size-demo.sh"
  },
  "keywords": [
    "canvas",
    "text",
    "rendering",
    "bitmap",
    "font",
    "pixel-perfect",
    "typography",
    "cross-browser"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "src/",
    "public/",
    "font-assets/",
    "docs/",
    "LICENSE",
    "README.md"
  ]
}