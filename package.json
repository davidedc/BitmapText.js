{
  "name": "bitmaptext-js",
  "version": "1.0.0",
  "description": "A JavaScript library for rendering pixel-identical, consistent bitmap text on HTML5 Canvas across all browsers and devices.",
  "main": "src/runtime/BitmapText.js",
  "exports": {
    ".": "./src/runtime/BitmapText.js",
    "./runtime/*": "./src/runtime/*",
    "./builder/*": "./src/builder/*",
    "./platform/*": "./src/platform/*",
    "./utils/*": "./src/utils/*",
    "./runtime": {
      "import": "./src/runtime/BitmapText.js",
      "require": "./src/runtime/BitmapText.js"
    },
    "./runtime/BitmapText": "./src/runtime/BitmapText.js",
    "./runtime/AtlasDataStore": "./src/runtime/AtlasDataStore.js",
    "./runtime/FontProperties": "./src/runtime/FontProperties.js",
    "./builder/BitmapTextFAB": "./src/builder/BitmapTextFAB.js",
    "./builder/AtlasDataStoreFAB": "./src/builder/AtlasDataStoreFAB.js",
    "./builder/FontPropertiesFAB": "./src/builder/FontPropertiesFAB.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test",
    "doc": "docs"
  },
  "scripts": {
    "serve": "python -m http.server 8000",
    "font-assets-builder": "open http://localhost:8000/public/font-assets-builder.html",
    "test-renderer": "open http://localhost:8000/public/test-renderer.html",
    "watch-fonts": "./scripts/watch-font-assets.sh",
    "optimize-images": "./scripts/optimize-images.sh",
    "qoi-to-png": "node scripts/qoi-to-png-converter.js",
    "png-to-js": "node scripts/png-to-js-converter.js",
    "qoi-memory": "node scripts/qoi-memory-calculator.js",
    "build-multi-size-demo": "./scripts/build-node-multi-size-demo.sh",
    "generate-registry": "node scripts/generate-font-registry.js",
    "build-bundle": "./scripts/build-runtime-bundle.sh --browser",
    "build-bundle-node": "./scripts/build-runtime-bundle.sh --node",
    "build-bundle-all": "./scripts/build-runtime-bundle.sh --all",
    "build": "npm run build-bundle-all"
  },
  "keywords": [
    "canvas",
    "text",
    "rendering",
    "bitmap",
    "font",
    "pixel-perfect",
    "typography",
    "cross-browser"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "src/",
    "public/",
    "font-assets/",
    "docs/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "playwright": "^1.56.1",
    "puppeteer": "^24.29.1"
  }
}
